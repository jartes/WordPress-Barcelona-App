<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.artesans.wpbarcelona"
        version   = "1.0">

    <name>WPBarcelona</name>

    <description>
        WPBarcelona Official App
    </description>

    <author href="http://www.artesans.eu" email="contact@artesans.eu">
        WPBarcelona
    </author>

    <preference name="phonegap-version" value="3.6.3" />
    <preference name="android-minSdkVersion" value="10" /><!-- Android 4.0 is minimum supported -->
    <feature name="http://api.phonegap.com/1.0/device" />

    <gap:config-file platform="ios" parent="CFBundleShortVersionString"><string>1.0</string></gap:config-file>

    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="com.phonegap.plugins.pushplugin" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.8" />

    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="keyboardDisplayRequiresUserAction" value="false" />

    <gap:splash src="res/screen/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-667h-2x.png" gap:platform="ios" width="750" height="1334" />
    <gap:splash src="res/screen/ios/screen-iphone-portrait-1104h-2x.png" gap:platform="ios" width="1242" height="2208" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape-2x.png" gap:platform="ios" width="2048" height="1536" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait-2x.png" gap:platform="ios" width="1536" height="2048" />

    <icon src="res/icon/ios/Icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="res/icon/ios/Icon-60@2.png" gap:platform="ios" width="120" height="120" />
    <icon src="res/icon/ios/Icon-60@3x.png" gap:platform="ios" width="180" height="180  " />
    <icon src="res/icon/ios/Icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icon/ios/Icon-72@2x.png" gap:platform="ios" width="144" height="144" />
    <icon src="res/icon/ios/Icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="res/icon/ios/Icon-76@2x.png" gap:platform="ios" width="152" height="152" />
    <icon src="res/icon/ios/Icon-Small-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="res/icon/ios/Icon-Small-40@2x.png" gap:platform="ios" width="80" height="80" />
    <icon src="res/icon/ios/Icon-Small-40@3x.png" gap:platform="ios" width="120" height="120" />
    <icon src="res/icon/ios/Icon-Small-50.png" gap:platform="ios" width="50" height="50" />
    <icon src="res/icon/ios/Icon-Small-50@2x.png" gap:platform="ios" width="100" height="100" />
    <icon src="res/icon/ios/Icon-Small.png" gap:platform="ios" width="29" height="29" />
    <icon src="res/icon/ios/Icon-Small@2x.png" gap:platform="ios" width="58" height="58" />
    <icon src="res/icon/ios/Icon-Small@3x.png" gap:platform="ios" width="87" height="87" />
    <icon src="res/icon/ios/Icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon/ios/Icon@2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="res/icon/ios/iTunesArtwork@2x.png" gap:platform="ios" width="1024" height="1024" />

    <icon src="res/icon/android/36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/android/48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/android/72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/android/96.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="res/screen/android/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />

    <icon src="icon.png" />

    <content src="index.html" />
    <access origin="*" subdomains="true" />

</widget>